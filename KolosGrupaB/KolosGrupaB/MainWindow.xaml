<Window x:Class="KolosGrupaB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KolosGrupaB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listKsiazki" HorizontalAlignment="Left" Height="295" Margin="28,39,0,0" VerticalAlignment="Top" Width="327" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="btnDodaj" Content="Dodaj" HorizontalAlignment="Left" Margin="506,50,0,0" VerticalAlignment="Top" Height="37" Width="76" Click="btnDodaj_Click"/>
        <Button x:Name="btnUsun" Content="Usun" HorizontalAlignment="Left" Margin="601,54,0,0" VerticalAlignment="Top" Height="33" Width="76" Click="btnUsun_Click"/>
        <Label x:Name="lblSuma" Content="Label" HorizontalAlignment="Center" Height="52" Margin="0,358,0,0" VerticalAlignment="Top" Width="265"/>
        <Button x:Name="btnWyswietl" Content="Wyswietl" HorizontalAlignment="Left" Margin="400,52,0,0" VerticalAlignment="Top" Height="37" Width="71" Click="btnWyswietl_Click"/>
        <TextBox x:Name="txtTytul" HorizontalAlignment="Left" Margin="400,127,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtAutor" HorizontalAlignment="Left" Margin="400,150,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtRok" HorizontalAlignment="Left" Margin="400,173,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtGatunek" HorizontalAlignment="Left" Margin="400,199,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
